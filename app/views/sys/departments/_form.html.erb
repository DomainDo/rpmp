<%= form_for(@department) do |f| %>
  <%= render 'application/error_messages', :model => @department %>

  <div class="field sys-mods">
    <%= f.label :code, '代号' %><br />
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :name, '名称' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, '描述' %><br />
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div class="actions">
    <%= f.submit '保存' %>
  </div>
<% end %>
